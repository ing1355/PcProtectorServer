<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="oms.pc_protector.restApi.clientFile.mapper.ClientFileMapper">


    <select id="selectClientFileAll" resultType="oms.pc_protector.restApi.clientFile.model.ClientFileVO" >
        SELECT * FROM client_file
    </select>

    <select id="selectRecentClientFile" resultType="oms.pc_protector.restApi.clientFile.model.ClientFileVO" >
        SELECT * FROM client_file ORDER BY create_time DESC LIMIT 1
    </select>

    <insert id="insertClientFile" parameterType="oms.pc_protector.restApi.clientFile.model.ClientFileVO">
        INSERT INTO client_file (version, file_name, file_size, md5)
        VALUES (#{version}, #{fileName}, #{fileSize}, #{md5})
    </insert>

    <delete id="deleteClientFile" parameterType="oms.pc_protector.restApi.clientFile.model.ClientFileVO">
        DELETE FROM client_file WHERE idx = #{idx}
    </delete>


</mapper>


